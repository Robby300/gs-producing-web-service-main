pipeline {
    agent any

    stages {
        stage('deploy to server') {
            steps {
                sshagent(['server']) {
                    withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                        sh 'ssh robert@192.168.233.131 docker-compose -f ./docker-compose.yml --scale employee=3 up -d'
                    }
                }
            }
        }
    }
}