pipeline {
    agent any
    environment {
        NUMBER_OF_PODS = "3"
    }

    stages {
        stage('deploy to server') {
            steps {
                sshagent(['server']) {
                    withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                        sh 'ssh robert@192.168.233.131 docker-compose -f up -d --scale employee=${NUMBER_OF_PODS}'
                    }
                }
            }
        }
    }
}