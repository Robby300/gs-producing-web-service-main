pipeline {
    agent any

    stages {
        stage('deploy to server') {
            steps {
                sshagent(['server']) {
                    withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                        sh 'ssh robert@192.168.233.131 bash docker-compose up -f --scale employee=3'
                    }
                }
            }
        }
    }
}